# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# SSH Tunnel Configuration (Optional)
# Set to "true" to enable SSH tunnel, "false" or leave empty to disable
USE_SSH_TUNNEL=false

# SSH Server Configuration (only needed if USE_SSH_TUNNEL=true)
SSH_HOST=your_ssh_server.com
SSH_PORT=22
SSH_USER=your_ssh_username

# SSH Authentication - Use either password OR key file (not both)
SSH_PASSWORD=your_ssh_password
# SSH_KEY_PATH=/path/to/your/private/key

# SSH Tunnel Ports Configuration
SSH_LOCAL_PORT=3307        # Local port for the tunnel (should be different from DB_PORT)
SSH_REMOTE_HOST=127.0.0.1  # Remote MySQL host (usually localhost on the SSH server)
SSH_REMOTE_PORT=3306       # Remote MySQL port

# Example configuration for SSH tunnel:
# USE_SSH_TUNNEL=true
# SSH_HOST=your-server.com
# SSH_PORT=22
# SSH_USER=ubuntu
# SSH_KEY_PATH=/home/user/.ssh/id_rsa
# SSH_LOCAL_PORT=3307
# SSH_REMOTE_HOST=127.0.0.1
# SSH_REMOTE_PORT=3306